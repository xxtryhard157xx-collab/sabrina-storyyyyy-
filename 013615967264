<script>
/* ===== CONFIG ===== */
let sales = 8742;
let today = 12;
const maxSales = 9200;
const nomes = ["Fulano","Ana","Lucas","JoÃ£o","Marcos","Julia","Pedro","Rafael"];

/* ===== ELEMENTS ===== */
const salesEl = document.getElementById("salesCount");
const todayEl = document.getElementById("todaySales");

/* ===== FUNCTIONS ===== */
function renderSales(){
  salesEl.textContent = sales.toLocaleString("pt-BR");
  todayEl.textContent = "+"+today+" vendidos hoje";
  salesEl.classList.add("pulse");
  setTimeout(()=>salesEl.classList.remove("pulse"),600);
}

function incrementSale(qty=1){
  if(sales < maxSales){
    sales += qty;
    today += qty;
    renderSales();
  }
}

function checkID(){
  const id=document.getElementById("playerId").value;
  document.getElementById("payBtn").disabled=id.length<6;
}

function pay(){
  const id=document.getElementById("playerId").value;
  localStorage.setItem("playerID",id);
  document.getElementById("confirmContent").innerHTML=`
    <h2>ðŸ’³ ConfirmaÃ§Ã£o</h2>
    <p style="margin:12px 0;font-size:14px">
      ID do Jogador:<br><b>${id}</b><br><br>
      ApÃ³s pagar, clique em <b>JÃ¡ paguei</b>
    </p>
    <button onclick="confirmPayment()">JÃ¡ paguei</button>
  `;
  document.getElementById("confirmBox").style.display="flex";
  window.open("https://mpago.la/1k4G4gZ","_blank");
}

function confirmPayment(){
  const id=localStorage.getItem("playerID");
  document.getElementById("confirmContent").innerHTML=`
    <h2>âœ… Pagamento enviado!</h2>
    <p style="margin-top:12px;font-size:14px">
      ID do jogador:<br><b>${id}</b><br>
      Aguarde a entrega ðŸ’Ž
    </p>
  `;
}

/* ===== PROVA SOCIAL ===== */
setInterval(()=>{
  const nome=nomes[Math.floor(Math.random()*nomes.length)];
  const n=document.createElement("div");
  n.className="notify";
  n.innerHTML="ðŸ’Ž <b>"+nome+"</b> acabou de comprar<br><small>agora mesmo</small>";
  document.body.appendChild(n);
  setTimeout(()=>n.remove(),4000);
  incrementSale(Math.floor(Math.random()*3)+1);
},8000);

/* ===== VIEWERS ===== */
setInterval(()=>{
  const v=Math.floor(Math.random()*10)+8;
  document.getElementById("viewers").innerHTML="ðŸ‘€ "+v+" pessoas vendo agora";
},5000);

/* ===== GROWTH ===== */
setInterval(()=>incrementSale(1),Math.floor(Math.random()*5000)+4000);
renderSales();
</script>

